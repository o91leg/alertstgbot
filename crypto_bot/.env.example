# Telegram Bot Configuration
BOT_TOKEN=your_bot_token_here
DEBUG=true
LOG_LEVEL=INFO
MAX_CONNECTIONS=100
REQUEST_TIMEOUT=30

# Database Configuration
DATABASE_URL=postgresql+asyncpg://crypto_user:crypto_pass@localhost:5432/crypto_bot
DB_ECHO=false
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
DB_POOL_TIMEOUT=30
